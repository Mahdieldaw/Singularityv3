{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": ".",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./ui/types"
    ],
    "paths": {
      "react-window": [
        "./ui/types/react-window.d.ts"
      ],
      "react-window/*": [
        "./ui/types/react-window.d.ts"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "types": [
      "react",
      "react-dom",
      "chrome",
      "node"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.d.ts",
    "src/utils/logger.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}